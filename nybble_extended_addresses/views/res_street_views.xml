<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Calle -->
        <record id="view_nybble_street_tree" model="ir.ui.view">
            <field name="name">res.nybble.street.tree</field>
            <field name="model">res.street</field>
            <field name="arch" type="xml">
                <tree string="Calles">
                    <field name="external_id"/>
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Your Form View Definition -->
        <record id="view_nybble_street_form" model="ir.ui.view">
            <field name="name">res.nybble.street.form</field>
            <field name="model">res.street</field>
            <field name="arch" type="xml">
                <form string="Calle">
                    <group>
                        <group>
                            <field name="name" string="Nombre de la calle"/>
                        </group>

                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <!-- Your Action Window Definition -->
        <record id="action_nybble_street" model="ir.actions.act_window">
            <field name="name">Calles</field>
            <field name="res_model">res.street</field>
            <!--            <field name="view_type">form</field>-->
            <field name="view_mode">list,form</field>
        </record>

        <!-- Action Menu Item Related To Above Action Window -->
        <menuitem
                action="action_nybble_street"
                id="action_menu_nybble_street"
                parent="contacts.res_partner_menu_config"
                name="Nybble Calles"
                sequence="10"/>
    </data>
</odoo>
